<div class='container'>
  <div class='page-users'>
    <div class='row d-flex table-user'>
      <div class='col-md-12 m-auto'>
        <h1>Dashboard</h1>
        <h2>List of Users</h2>
        <a class='btn btn-warning' href='/dashboard/create-user' role='button'>Create New User</a>
        <table class='table'>
          <thead>
            <tr>
              <th scope='col'>ID</th>
              <th scope='col'>Username</th>
              <th scope='col'>First Name</th>
              <th scope='col'>Last Name</th>
              <th scopr='col'>Country</th>
              <th scope='col'>action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user=> { %>
              <tr>
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= user.username %>
                </td>
                <td>
                  <%= user.user_biodatum.firstname %>
                </td>
                <td>
                  <%= user.user_biodatum.lastname %>
                </td>
                <td>
                  <%= user.user_biodatum.country %>
                </td>
                <td>
                  <a class="btn btn-secondary" href="/dashboard/update-user/<%=user.id%>" role="button">edit</a>
                  <a class="btn btn-danger" href="/dashboard/delete-user/<%=user.id%>" role="button">delete</a>
                  <% }) %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



